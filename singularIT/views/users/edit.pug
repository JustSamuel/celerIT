extends ../layout

block above-content

block header
  header.text
    h2 Edit user

block content
  .section.users.intro.slanted
    .content.offset-by-two.eight.columns
      .row
        .twelve.columns
          form(method='POST')

            table.users.table
              thead
                  th First name
                  th Surname
                  th Email
                  th Ticket
                  th Association
                  th Present
                  th Admin
              tbody
                tr(style='height: 40px')
                  td=user.firstname
                  td=user.surname
                  td=user.email
                  td=user.ticket
                  td=associations[user.association].name
                  td
                    input#present(type='checkbox', name='present', checked=user.present?'checked':undefined)
                  td
                    input#admin(type='checkbox', name='admin', checked=user.admin?'checked':undefined)

            a.button(href='/users') Back
            button.button.button-primary.special(type='submit', style='float:right') Save
