doctype html

html
  head
    style.
      /* Layout */
      .ticket {
        width: 550px;
        margin: 1px 0 0;
        padding: 0;
        outline: 1px dashed rgba(185,185,185,1);
        position: relative;
      }

      .ticket .content {
        float: left;
        padding: 15px;
        width: 400px;
      }

      .ticket .aside {
        float: right;
        height: 330px;
        margin: 0 -1px -1px 0;
        width: 115px;
        background-color: #2d2e83;
        -webkit-print-color-adjust: exact;
        position: relative;
        z-index: 2;
      }

      .ticket .aside img {
        height: 80px;
        position: absolute;
        top: 13px;
        right:20px;
        -webkit-print-color-adjust: exact;
      }


      .ticket-details {
        display: flex;
        flex-direction: row;
        align-items: start;
      }

      .detail{
        margin: 0px 10px;
        line-height: 1.2em;
        height: 3.5em;
      }

      .detail.quintor {
        margin-left: 30px;
      }

      .detail.quintor img {
        width: auto;
        height: 45px;
      }

      .barcode {
        margin-left: 10px;
        margin-bottom: 10px;
        width: 80%;
      }

      .barcode img {
        width: 100%;
        height: auto;
      }

      /* Layout for unused ticket page */
      .ticket.ophaal {
        width: 350px;
      }

      .ticket.ophaal:nth-of-type(2n){
        position: absolute;
        left: 375px;
        margin-top: -199px;
      }

      .ticket.ophaal .content {
        width:200px;
      }

      .ticket.ophaal .aside {
        height: 200px;
      }

      @font-face {
        font-family: "Apercu Mono";
        src: url("/font/Apercu Mono.otf");
      }

      @font-face {
        font-family: "Apercu Light";
        src: url("/font/Apercu Light.otf");
      }

      body {
        font-family: "Apercu Light", sans-serif;
        text-align: justify;
        hyphens: auto;
        -moz-hyphens: auto;
        -webkit-hyphens: auto;
        -ms-hyphens: auto;
        font-size: 1rem;
        margin: 20px;
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: "Apercu Mono", monospace;
        text-transform: uppercase;
        margin: 0;
        padding: 0;
        font-weight: normal;
        font-size: 1.75em;
      }
      html {
        font-size: 100%;
        -webkit-text-size-adjust: 100%;
        -ms-text-size-adjust: 100%;
        height: 100%;
        -webkit-text-size-adjust: 100%;
        -ms-text-size-adjust: 100%;
        -webkit-font-smoothing: antialiased;
        text-rendering: optimizeLegibility;
      }

      u, strong {
        color: #22244b;
      }

      p {
        padding: 0;
        margin: 5px 0 15px 0;
      }

      label {
        display: block;
        font-size: 1em;
        font-weight: bold;
      }

      label + strong {
        letter-spacing: .8px;
        font-size: 1.25em;
      }



      @media print {
        .ticket {
          outline: none;
        }

        .ticket.ophaal::before, .ticket.ophaal::after {
          content: '';
          display: block;
          width: 15px;
          height: 15px;
          border-bottom: 1px solid #ccc;
          border-right: 1px solid #ccc;
          position: absolute;
          top: -15px;
          left: -15px;
        }
        .ticket.ophaal::before {
          border-top: 1px solid #ccc;
          border-bottom: none;
          bottom: -17px;
          top: auto;
        }
      }

  body
    block content
